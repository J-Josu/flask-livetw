{
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.tabSize": 4
  },
  "files.exclude": {
    "**/__pycache__": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "flake8.args": [
    "--ignore=E501,W503"
  ],
  "python.analysis.typeCheckingMode": "strict",
  "isort.args": [
    "--profile=black",
    "--multi-line=3",
  ]
}
